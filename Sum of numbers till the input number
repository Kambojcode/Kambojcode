#include <stdio.h>
int main()
{
    int n, sum = 0;
    printf("Enter number:");
    scanf("%d", &n);
    // we can do multiple initialization in single statement
    for (int i = 0, j = n; i <= n && j >= 1; i++, j--)
    {
        sum = sum + i;
        printf("%d\n", j);
    }
    printf("sum is %d\n", sum);
}
